# arguments
tissue_ai_home="@TISSUE_AI_HOME@"
experiment_dir="@EXPERIMENT_DIR@"
metadata="@METADATA@"
salmon_index="@SALMON_INDEX@"
nthreads=@NTHREADS@

# build file names
scripts_dir="$tissue_ai_home/scripts"
download="$scripts_dir/3_download_fastqs.sh"
quantify="$scripts_dir/4_quantify.sh"

# first step: download FASTQs
bash -c "$download $tissue_ai_home $experiment_dir $metadata" || exit 1

# second step: quantify
bash -c "$quantify $tissue_ai_home $experiment_dir $metadata $salmon_index" || exit 1
